<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- PaymentEventInbox -->
    <changeSet id="v1.0-create-payment_event_inbox" author="kuraterut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="payment_event_inbox"/>
            </not>
        </preConditions>
        <createTable tableName="payment_event_inbox">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="processed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence
                sequenceName="payment_event_inbox_seq"
                startValue="1"
                incrementBy="1"/>
        <addDefaultValue
                tableName="payment_event_inbox"
                columnName="id"
                defaultValueComputed="nextval('payment_event_inbox_seq')"/>
    </changeSet>
</databaseChangeLog>