<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">


    <!-- PaymentAccount -->
    <changeSet id="v1.0-create-payment_accounts" author="kuraterut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="payment_accounts"/>
            </not>
        </preConditions>
        <createTable tableName="payment_accounts">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="balance" type="DECIMAL(19,4)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="version" type="BIGINT"/>
        </createTable>
        <createSequence
                sequenceName="payment_account_seq"
                startValue="1"
                incrementBy="1"/>
        <addDefaultValue
                tableName="payment_accounts"
                columnName="id"
                defaultValueComputed="nextval('payment_account_seq')"/>
    </changeSet>
</databaseChangeLog>