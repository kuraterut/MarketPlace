<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- CreateOrderEventOutbox -->
    <changeSet id="v1.0-create-orders_outbox" author="kuraterut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orders_outbox"/>
            </not>
        </preConditions>
        <createTable tableName="orders_outbox">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="processed" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="orders_outbox"
                baseColumnNames="order_id"
                constraintName="fk_orders_outbox_order"
                referencedTableName="orders"
                referencedColumnNames="id"/>
        <createSequence
                sequenceName="create_order_event_outbox_seq"
                startValue="1"
                incrementBy="1"/>
        <addDefaultValue
                tableName="orders_outbox"
                columnName="id"
                defaultValueComputed="nextval('create_order_event_outbox_seq')"/>
    </changeSet>
</databaseChangeLog>