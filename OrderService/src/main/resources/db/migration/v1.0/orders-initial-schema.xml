<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">


    <changeSet id="v1.0-create-orders" author="kuraterut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="orders"/>
            </not>
        </preConditions>
        <createTable tableName="orders">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence
                sequenceName="order_seq"
                startValue="1"
                incrementBy="1"/>
        <addDefaultValue
                tableName="orders"
                columnName="id"
                defaultValueComputed="nextval('order_seq')"/>
    </changeSet>

    <changeSet id="v1.0-create-json_order_details" author="kuraterut">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="json_order_details"/>
            </not>
        </preConditions>
        <createTable tableName="json_order_details">
            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="json_order_details" type="TEXT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="json_order_details"
                baseColumnNames="order_id"
                constraintName="fk_json_details_order"
                referencedTableName="orders"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
